1.--1.DATA TYPES PRACTICE 
CREATE TABLE PRODUCTS (
PRODUCT_ID SERIAL,
PRODUCT_NAME VARCHAR(50),
DESCRIPTION TEXT,
PRICE NUMERIC,
IN_STOCK BOOLEAN,
MANUFACTUE_DATE DATE,
CREATED_AT TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
TAGS TEXT[],
EXTRA_DETAILS JSON
 );
 
2.--2.MULTI DATABASE SETUP 
CREATE DATABASE DEV_DB;
CREATE DATABASE TEST_DB;
CREATE DATABASE PROD_DB;

--NOW CONNECT TO EACH DATABASE SEPARATELY  DEV_DB,TEST_DB,PROD_DB 
CREATE TABLE USERS (
USER_ID SERIAL,
USER_NAME VARCHAR(50),
EMAIL VARCHAR(50),
IS_ACTIVE BOOLEAN,
CREATED_AT TIMESTAMP DEFAULT 
CURRENT_TIMESTAMP
);

--YOU MUST THIS INSIDE  DEV_DB,TEST_DB,PROD_DB 
--RIGHT CLICK TEST_DB ,OPEN QUERY TOOL ,RUN THE SAME CREATE TABLE COMMAND YOU SEE THE TABLE CREATED 


3.--Sample Data Generator – students table
--Insert 50 students (sample – repeat/change values)
--This single query inserts 50 rows automatically (very impressive in interviews!)

CREATE TABLE STUDENTS (
STUDENT_ID SERIAL,
STUDENT_NAME VARCHAR(100),
AGE INT,
EMAIL VARCHAR(100),
MARKS NUMERIC(10,2),
ENROLLED BOOLEAN,
JOINING_DATE DATE
);
INSERT INTO STUDENTS(STUDENT_NAME,AGE,EMAIL,MARKS,ENROLLED,JOINING_DATE)
SELECT 
     'STUDENT_' || GENERATE_SERIES,
	 18 + (GENERATE_SERIES %5),
	 'STUDENT'|| GENERATE_SERIES||'@GMAIL.COM',
	 60 + (GENERATE_SERIES %40),
	 TRUE,
	 CURRENT_DATE-(GENERATE_SERIES ||'DAYS'):: INTERVAL
	 FROM GENERATE_SERIES (1,50);

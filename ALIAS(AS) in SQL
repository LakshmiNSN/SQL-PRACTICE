-- alais (as)
--temporary name and uses for column and table
--actual name will not be modified
--useful with join,aggreate functions

--COLUMN ALIAS
SELECT 
EMP_NAME AS NAME,
SALARY AS MONTHLY_SALARY
FROM EMPLOYEE;

--ALIAS WITHOUT AS (ALSO VALID)
SELECT 
EMP_NAME NAME,
CITY LOCATION
FROM EMPLOYEE;

--TABLE ALIAS
SELECT
E.EMP_NAME,
E.DEPARTMENT
FROM EMPLOYEE AS E;

--ALIAS WITH CALCULATIONS
SELECT 
EMP_NAME,
SALARY * 12 AS ANNUAL_SALARY
FROM EMPLOYEE;

--ALIAS WITH AGGREGATE FUNCTIONS
SELECT 
DEPARTMENT AS DEPT,
COUNT(*) AS TOTAL_EMPLOYEE
FROM EMPLOYEE
GROUP BY DEPARTMENT;

--ALIAS WITH AVG
SELECT 
AVG(SALARY) AS AVG_SALARY
FROM EMPLOYEE
GROUP BY CITY;

--ALIAS WITH HAVING 
SELECT 
DEPARTMENT AS DEPT,
SUM(SALARY)AS TOTAL_SALARY
FROM EMPLOYEE
GROUPP BY DEPARTMENT
HAVING SUM(SALARY) > 100000;

--ALIAS IN ORDER BY
SELECT 
EMP_NAME,
SALARY AS PAY
FROM EMPLOYEE
ORDER BY PAY DESC;

--Multiple Aliases Together
SELECT 
EMP_ID AS ID,
EMP_NAME AS NAME,
DEPARTMENT AS DEPT,
CITY AS LOCATION
FROM EMPLOYEE;

